<IfModule mod_negotiation.c>
    Options -MultiViews
  </IfModule>
  
  <IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /inventori
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /inventori/index.html [L]
  </IfModule>